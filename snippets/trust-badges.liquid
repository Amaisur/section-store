  <a id="customer-info-popup" style="text-decoration: none;" href="{{ block.settings.redirect_to }}?productHandle={{ product.handle }}"><button class="quote-btn-d11" >
    Request a Quote
</button></a>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const popupTrigger = document.querySelector('#customer-info-popup');
    
    if (popupTrigger) {
        popupTrigger.addEventListener('click', function(event) {
            event.preventDefault();
            
            const url = new URL(popupTrigger.href);
            const productHandle = url.searchParams.get('productHandle');
            
            if (productHandle) {
                fetch(`/products/${productHandle}.json`)
                    .then(response => response.json())
                    .then(data => {
                        const product = data.product;
                        showPopup(product.title, product.images[0].src);
                    })
                    .catch(error => console.error('Error fetching product details:', error));
            } else {
                console.error('Product handle is missing');
            }
        });
    }
    
    function showPopup(title, imageSrc) {
        const popupOverlay = document.createElement('div');
        popupOverlay.className = 'd05-popup-overlay';
        
        const popupContent = document.createElement('div');
        popupContent.className = 'd05-popup-content';
        
        popupContent.innerHTML = `
            <div class="d05-popup-header">
            <p class="d05-popup-heading">Request a quote</p>
            </div>
            
            <form id="customer-info-form">
            <div class="d05-popup-body">
           <div class="d05-product-info">
            <img src="${imageSrc}" alt="${title}"/>
             <h2>${title}</h2>
            </div>
            <div class="d05-form-feilds">
                <label class="d05-label-name">
                    Name:
                    <input type="text" id="name" required>
                </label>
                <label class="d05-label-phone">
                    Phone:
                    <input type="tel" id="phone" required>
                </label>
                <label class="d05-label-email">
                    Email:
                    <input type="email" id="email" required>
                </label>
                </div>
                </div>
                <button type="button" id="continue-button">Continue</button>
                <button type="button" id="cancel-button">Cancel</button>
            
            
            </form>
        `;
        
        popupOverlay.appendChild(popupContent);
        document.body.appendChild(popupOverlay);
        
        document.getElementById('continue-button').addEventListener('click', function() {
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const email = document.getElementById('email').value;
            console.log('Form Submitted:', { name, phone, email });
            document.body.removeChild(popupOverlay);
        });
        
        document.getElementById('cancel-button').addEventListener('click', function() {
            document.body.removeChild(popupOverlay);
        });
    }
});

</script>


    
