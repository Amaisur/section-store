  <style>
    *{
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }
    .main-trust-3-d9{
        width: 100%;
        min-width: 430px;
        margin: 0 auto;
        margin-left: -60px !important;
    }
    .inner-trust-3-d9{
        width: 100%;
        padding: {{ block.settings.padding-vertical }}rem  {{ block.settings.padding-horizontal }}rem ;
    }
    .row-trust-3-d9{
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .col-trust-3-d9{
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 10px;
    }
    .col-trust-3-d9 .img-trust-3-d9{
        width: {{ block.settings.img-size }}px;
        overflow: hidden;
    }
    .col-trust-3-d9 .img-trust-3-d9 img, .col-trust-3-d9 .img-trust-3-d9 svg{
        width: 100%;
    }
    .col-trust-3-d9 .img-trust-3-d9 span {
      font-size: {{ block.settings.icon-size }}px;
    }
    .col-trust-3-d9{
      padding: {{ block.settings.c-padding-vertical }}rem  {{ block.settings.c-padding-horizontal }}rem;
      min-height: 70px;
    }
    .col-trust-3-d9:nth-child(odd){
        border-right: 1px solid {{ block.settings.br-color }};
        border-bottom: 1px solid {{ block.settings.br-color }};
    }
    .col-trust-3-d9:nth-child(-n+2){
        border-top: none;
    }
    .col-trust-3-d9:nth-child(even){
        border-bottom: 1px solid {{ block.settings.br-color }};
    }
    .content-trust-3-d9 h4{
      font-size: {{ block.settings.head-size }}px;
      line-height: 130%;
      color: {{ block.settings.head-color }};
    }
    .content-trust-3-d9 p{
      font-size: {{ block.settings.para-size }}px;
      line-height: 120%;
      color: {{ block.settings.sub-color }};
    }

@media (max-width: 768px){
  .main-trust-3-d9{
    min-width: 200px;
    margin: 0 auto !important;
  }
  .inner-trust-3-d9{
    padding-left: 0;
    padding-right: 0;
  }
  .col-trust-3-d9{
    padding-left: 5px;
    padding-right: 5px;
  }
}
@media (min-width: 1400px){
   .main-trust-3-d9{
    margin: 0 auto !important;
  }
}
    
