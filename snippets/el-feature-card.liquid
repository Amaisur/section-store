<div class="el-feature-card">
  <div class="el-feature-icon-wrapper">
    {% if feature_image != blank %}
      <img class="el-feature-icon" src="{{ feature_image | img_url: '100x100' }}" alt="Feature Icon">
    {% else %}
      <div class="el-feature-icon-placeholder">Icon</div>
    {% endif %}
  </div>
  <div class="el-feature-content">
    <h3 class="el-feature-title">{{ feature_title }}</h3>
    <p class="el-feature-description">{{ feature_description }}</p>
  </div>
</div>
<style>
.el-feature-card {
  display: flex;
  align-items: flex-start;
  gap: 18px;
  margin-bottom: 28px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  padding: 18px 22px;
}
.el-feature-icon-wrapper {
  flex-shrink: 0;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.el-feature-icon {
  width: 60px;
  height: 60px;
  object-fit: contain;
  border-radius: 50%;
  background: #f5f5f5;
}
.el-feature-icon-placeholder {
  width: 60px;
  height: 60px;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bbb;
  border-radius: 50%;
  font-size: 1.1rem;
}
.el-feature-content {
  flex: 1;
}
.el-feature-title {
  margin: 0 0 8px 0;
  font-size: 1.15em;
  font-weight: 600;
  color: #222;
}
.el-feature-description {
  margin: 0;
  color: #555;
  font-size: 1em;
}
</style> 