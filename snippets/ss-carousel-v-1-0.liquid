 {% if product != blank %}
    <div class="ss-rc-product">
      <a href="{{ product.url }}">
        <div class="ss-rc-product-image">
          {% render 'ss-media-snippet', img: product.featured_image, object_fit: 'cover' %}
        </div>
        <div class="ss-rc-product-info">
          <p class="ss-rc-product-title heading-rcv-1-0">{{ product.title }}</p>
          <div class="ss-price">
           {% render 'ss-price-v-1-0', product: product %}
          </div>
        </div>
      </a>
    </div>
  {% endif %}