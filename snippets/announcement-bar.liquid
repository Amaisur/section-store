  #shopify-section-{{ section.id }} *{
    font-family: '{{ section.settings.font_choice }}', sans-serif;
  }
  
  .section-{{ section.id }} {
    border-top: solid #000000 0px;
    border-bottom: solid #000000 0px;
    margin-top: {{ section.settings.mt }}px;
    margin-bottom: {{ section.settings.mb }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ section.settings.pt }}px;
    padding-bottom: {{ section.settings.pb }}px;
    padding-left: 0rem;
    padding-right: 0rem;
  }

  .announcement-items-{{ section.id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    justify-content: flex-start;
    animation: {{ section.settings.anim }} infinite linear;
    animation-duration: 40s;
  }

  .announcement-item-{{ section.id }} {
    flex-shrink: 0;
    margin-left: 30px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .main-txt-d5.announcement-text-{{ section.id }}  {
    margin: 0;
    font-size: {{ section.settings.fs-t }}px;
    color: {{ section.settings.c-t }};
    line-height: 100%;
    text-transform: unset;
  }
  .small-txt-d5.announcement-text-{{ section.id }}  {
    margin: 0;
    font-size: {{ section.settings.fs-t-s }}px;
    color: {{ section.settings.c-t-s }};
    line-height: 100%;
    text-transform: unset;
  }

  .section-{{ section.id }} a {
    text-decoration:none!important;
  }

   .announcement-icon-{{ section.id }} {
    height: {{ section.settings.icons-s-m }}px;
    width: {{ section.settings.icons-s-m }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .announcement-icon-{{ section.id }} img,
  .announcement-icon-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: content;
  }

  .announcement-icon-{{ section.id }} svg path {
    fill: #ffffff;
  }

  .announcement-inner-{{ section.id }} {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
  }
  .text-content-d5{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.gap-t }}px;
  }
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ section.settings.mt-d }}px;
      margin-bottom: {{ section.settings.mb-d }}px;
    }
    .main-txt-d5.announcement-text-{{ section.id }} {
      font-size: {{ section.settings.fs-t-d }}px;
    }
    .small-txt-d5.announcement-text-{{ section.id }}  {
     font-size: {{ section.settings.fs-t-s-d }}px;
   }
    .section-{{ section.id }}-settings {
      padding-top: {{ section.settings.pt-d }}px;
      padding-bottom: {{ section.settings.padding-bottom-desktop }}px;
      padding-left: 0rem;
      padding-right: 0rem;
    }

    .announcement-item-{{ section.id }} { 
      margin-left: 50px;
    }

    .announcement-icon-{{ section.id }} {
      height: {{ section.settings.icons-s }}px;
      width: {{ section.settings.icons-s }}px;
    }

  
  }</style>




  <style>
    @keyframes d5-lr-anim {
      0% {
          transform: translateX(-100%);
      }
      
      100% {
          transform: translateX(0%);
      }
    }
     @keyframes d5-rl-anim {
      0% {
          transform: translateX(-0%);
      }
      
      100% {
          transform: translateX(-100%);
      }
    }
  </style>



  <style>
    .announcement-inner-{{ section.id }}:hover .announcement-items-{{ section.id }} {
       animation-play-state: paused 
    }
  </style>


<template id="announcement-template-{{ section.id }}">
  
</template>

<div class="section-{{ section.id }} announcement-{{ section.id }}" style="background-color:{{ section.settings.an-bg }}; background-image: ;">
    
      <div class="section-{{ section.id }}-settings announcement-inner-{{ section.id }}">
        {% for i in (1..3) %}
        <div class="announcement-items-{{ section.id }}">
            {% for block in section.blocks %}

              <div class="announcement-item-{{ section.id }} d5-block-{{ block.id }}">
                {% if block.settings.img != blank or block.settings.svg != blank %}
                  <div class="announcement-icon-{{ section.id }}">
                        {% if block.settings.img != blank %}
                        <img class="d5-image-{{ section.id }}" src="{{ block.settings.img | image_url: width: "200px" }}" width="" height="">
                          {% elsif block.settings.svg != blank %}
                          {{ block.settings.svg }}
                        {% endif %}
                    
                  </div>
                {% endif %}
                <div class="text-content-d5" style="flex-direction: {{ block.settings.position }};">
                  <p class="announcement-text-{{ section.id }} main-txt-d5">{{ block.settings.text }}</p>
                  <p class="announcement-text-{{ section.id }} small-txt-d5">{{ block.settings.min-text }}</p>
                </div>
              </div>
              {% endfor %}
      
              
          
        </div>
          {% endfor %}
      </div>
    
  </div><div id="announcement-local-target-{{ section.id }}"></div>

<script>
  function initAnnouncementBar2() {
    let cssTarget = '';
    let productForm = cssTarget
      ? document.querySelector(cssTarget)
      : document.querySelector('#announcement-local-target-{{ section.id }}');

    if (!productForm) return;

    const templateContent = document.querySelector(
      '#announcement-template-{{ section.id }}'
    ).content;

    productForm.insertAdjacentElement(
      'beforebegin',
      templateContent.firstElementChild
    );
  }

  document.addEventListener('DOMContentLoaded', initAnnouncementBar2);
  
</script>
