{% schema %}
{
  "name": "BL Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Your Headline Here"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Your subheadline or description goes here."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "BL Image Banner",
      "category": "Banner"
    }
  ]
}
{% endschema %}

<style>
.bl-image-banner-section {
  position: relative;
  width: 100vw;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  min-height: 340px;
  display: flex;
  align-items: center;
  justify-content: flex-start; /* Left align content on desktop */
  overflow: hidden;
  background: #f5f7fa;
}
.bl-image-banner-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}
.bl-image-banner-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(90deg, rgba(0,0,0,0.32) 0%, rgba(0,0,0,0.08) 60%, rgba(0,0,0,0) 100%);
  z-index: 2;
}
.bl-image-banner-content {
  position: relative;
  z-index: 3;
  max-width: 700px;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* Left align content on desktop */
  gap: 1.2em;
  padding: 2em 1em;
}
.bl-image-banner-headline {
  font-size: 2.2em;
  font-weight: 700;
  line-height: 1.1;
  color: #fff;
  text-shadow: 0 2px 8px rgba(0,0,0,0.13);
}
.bl-image-banner-subheadline {
  font-size: 1.1em;
  font-weight: 400;
  color: #e3eaf3;
  margin-bottom: 0.5em;
}
.bl-image-banner-btn {
  display: inline-block;
  background: #3498db;
  color: #fff;
  font-size: 1.1em;
  font-weight: 600;
  padding: 0.8em 2em;
  border: none;
  border-radius: 6px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  cursor: pointer;
  transition: background 0.2s, box-shadow 0.2s;
  text-decoration: none;
  margin-top: 0.5em;
}
.bl-image-banner-btn:hover {
  background: #2176bd;
  box-shadow: 0 4px 16px rgba(0,0,0,0.13);
}
@media (max-width: 900px) {
  .bl-image-banner-section {
    min-height: 220px;
  }
  .bl-image-banner-content {
    max-width: 95vw;
    padding: 1.2em 0.5em;
  }
  .bl-image-banner-headline {
    font-size: 1.4em;
  }
}
@media (max-width: 600px) {
  .bl-image-banner-section {
    min-height: 140px;
    justify-content: center; /* Center content horizontally on mobile */
  }
  .bl-image-banner-content {
    align-items: center; /* Center content horizontally on mobile */
    text-align: center;  /* Center text on mobile */
    gap: 0.8em;
    padding: 1em 0.2em;
  }
  .bl-image-banner-headline {
    font-size: 1em;
  }
  .bl-image-banner-subheadline {
    font-size: 0.95em;
  }
  .bl-image-banner-btn {
    font-size: 1em;
    padding: 0.6em 1.2em;
  }
}
</style>

<div class="bl-image-banner-section">
  {% if section.settings.background_image != blank %}
    <img class="bl-image-banner-bg" src="{{ section.settings.background_image | image_url: width: 1800 }}" alt="Banner background" loading="eager">
  {% endif %}
  <div class="bl-image-banner-overlay"></div>
  <div class="bl-image-banner-content">
    {% if section.settings.headline != blank %}
      <div class="bl-image-banner-headline">{{ section.settings.headline }}</div>
    {% endif %}
    {% if section.settings.subheadline != blank %}
      <div class="bl-image-banner-subheadline">{{ section.settings.subheadline }}</div>
    {% endif %}
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="bl-image-banner-btn">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div> 