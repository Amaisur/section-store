<style data-shopify="">
  .section-{{ section.id }} {}
  .section-{{ section.id }}-padding {
    max-width: 120rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    padding-top: 27px;
    padding-bottom: 27px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding: 0 5rem;
      padding-top: 36px;
      padding-bottom: 36px;
    }
  }

 #shopify-section-{{ section.id }} p {
    margin-top: 5px !important;
    margin-bottom: 5px !important;
  }
  
  #shopify-section-{{ section.id }} .feature-logo-row {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
  }
  
  #shopify-section-{{ section.id }} .feature-logo-row-block {
      background-color: white;
      flex: 1;
      max-width: 500px;
      min-width: 450px;
      margin: 10px;
      display: flex;
      border: solid 1px #efefef;
      height: auto;
      padding: 20px;
      text-align: left;
      transition: 0.2s;
      border-radius: 4px;
      position: relative;
      align-items: center;
      color: white;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  }
  
  #shopify-section-{{ section.id }} .feature-logo-row-icon {
      margin-right: 30px;
      height: 60px;
    }
  
  #shopify-section-{{ section.id }} .feature-logo-row-header {
      margin: 15px 0px 5px 0px;
      font-size: 18px;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-style: normal;
      font-weight: 600;
      line-height: 1.2;
      color: #212121;
  }
  
  #shopify-section-{{ section.id }} .feature-logo-row-subtext {
      font-size: 15px;
      color: black;
      line-height: 1.4;
      margin: 5px 0px;
  }
  
  @media (max-width: 680px) {
      #shopify-section-{{ section.id }} .feature-logo-row-block {
          flex-direction: column;
          justify-content: center;
          padding: 20px;
          min-width: 100%;
          text-align: center;
      }
      #shopify-section-{{ section.id }} .feature-logo-row-icon {
          margin-right: 0px;
      }
      #shopify-section-{{ section.id }} .feature-logo-row-header {
          text-align: center;
      }
      #shopify-section-{{ section.id }} .feature-logo-row-subtext {
          text-align: center;
          margin-bottom: 5px;
      }
  }</style><div style="background-color:#ffffff;">
  <div class="section-{{ section.id }}-padding">
      <h1 style="text-align: {{ section.settings.text-align }}; padding: 20px"> Why should you buy? </h1>
      <div class="feature-logo-row">
        {% for block in section.blocks %}
          <div class="feature-logo-row-block">
            <img class="feature-logo-row-icon" src="{{ block.settings.img | img_url: '300x' }}" alt="{{ block.settings.heading }}-image" width="auto" height="">
            <div class="feature-logo-row-text">
              <p class="feature-logo-row-header">{{ block.settings.heading }}</p>
              <div class="feature-logo-row-subtext">{{ block.settings.info }}</div>
            </div>
          </div> 
        {% endfor %}
      </div>
  </div> 
</div>


{% schema %}
  {
    "name": "Features",
    "settings": [
      {
        "type": "text",
        "id": "m-heading",
        "label": "Heading",
        "default": "Why should you buy?"
      },
      {
        "type": "range",
        "id": "m-head",
        "min": 5,
        "max": 75,
        "default": 35,
        "step": 1,
        "unit": "px",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "mh-color",
        "label": "Heading Color",
        "default": "#000"
      },
      {
        "type": "select",
        "id": "text-align",
        "label": "Heading Alignment",
        "default": "center",
        "options": [
          {
            "label": "Left",
            "value": "left"
          },
          {
            "label": "Center",
            "value": "center"
          }
        ]
      },
      {
        "type": "color_background",
        "id": "bg-color",
        "label": "Background Color",
        "default": "none"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Feature text"
          },
           {
            "type": "richtext",
            "id": "info",
            "label": "Description",
            "default": "<p>Explain why your product or service is amazing. What are the benefits. Sell the whole in the wall not the drill.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Features"
      }
    ]
  }
{% endschema %}