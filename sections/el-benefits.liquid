{% comment %} EL Benefits Section - Centered image, 3 benefits left, 3 right, mobile slider unchanged {% endcomment %}

<style>
.el-benefits-section {
  background: #fff;
  border-radius: 2.5rem;
  padding: 2.5rem 40px 2rem 40px;
  margin: 2rem auto;
  max-width: 1360px;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  gap: 0;
  align-items: stretch;
  justify-content: center;
}
.el-benefits-col {
  flex: 1 1 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 2.5rem;
  min-width: 0;
}
.el-benefits-col.left,
.el-benefits-col.right {
  max-width: 260px;
}
.el-benefits-col.center {
  flex: 1 1 40%;
  align-items: center;
  justify-content: center;
  display: flex;
}
.el-benefits-image {
  background: #f4f1ef;
  border-radius: 2rem;
  padding: 2rem;
  min-width: 220px;
  min-height: 340px;
  max-width: 400px;
  max-height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.el-benefits-image img {
  max-width: 100%;
  max-height: 420px;
  border-radius: 1.5rem;
  object-fit: contain;
}
.el-benefits-image-placeholder {
  width: 180px;
  height: 340px;
  background: #e5e0e7;
  border-radius: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bc9bb2;
  font-size: 2.2rem;
  font-weight: 700;
}
.el-benefit-item {
  display: flex;
  align-items: flex-start;
  gap: 1.1rem;
  background: none;
}
.el-benefit-icon {
  width: 44px;
  height: 44px;
  min-width: 44px;
  min-height: 44px;
  border-radius: 1.2rem;
  background: #f4f1ef;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.el-benefit-icon img {
  width: 28px;
  height: 28px;
  object-fit: contain;
  display: block;
}
.el-benefit-icon-placeholder {
  width: 28px;
  height: 28px;
  background: #bc9bb2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 1.3rem;
}
.el-benefit-texts {
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}
.el-benefit-title {
  font-weight: 700;
  font-size: 1.1rem;
  color: #181818;
}
.el-benefit-desc {
  font-size: 1rem;
  color: #444;
}
.el-benefits-title {
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 0.5rem;
  color: #181818;
  text-align: center;
}
.el-benefits-subtitle {
  font-size: 1.2rem;
  color: #333;
  margin-bottom: 1.5rem;
  text-align: center;
}
.el-benefits-btn {
  margin: 2.5rem auto 0 auto;
  background: #bc9bb2;
  color: #fff;
  border: none;
  border-radius: 2rem;
  padding: 1rem 2.5rem;
  font-size: 1.2rem;
  font-weight: 700;
  cursor: pointer;
  transition: background 0.2s;
  display: inline-block;
  text-decoration: none;
  text-align: center;
}
.el-benefits-btn:active {
  background: #a07c9b;
}

@media (max-width: 900px) {
  .el-benefits-section {
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.2rem 10px 1.5rem 10px;
    align-items: stretch;
  }
  .el-benefits-title,
  .el-benefits-subtitle {
    text-align: left;
  }
  .el-benefits-col.left,
  .el-benefits-col.right,
  .el-benefits-col.center {
    max-width: 100%;
    width: 100%;
    flex: unset;
    align-items: stretch;
    justify-content: flex-start;
  }
  .el-benefits-col.center {
    margin-bottom: 1.2rem;
  }
  .el-benefits-image {
    min-width: 180px;
    min-height: 220px;
    max-width: 90vw;
    max-height: 260px;
    padding: 1rem;
    margin: 0 auto;
  }
  .el-benefits-btn {
    margin: 2rem 0 0 0;
  }
}

/* Mobile slider styles (unchanged) */
.el-benefits-slider-controls {
  display: none;
}
@media (max-width: 900px) {
  .el-benefits-slider-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.7rem;
    margin-bottom: 1.2rem;
  }
  .el-benefits-slider-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #e5e0e7;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }
  .el-benefits-slider-dot.active {
    background: #bc9bb2;
  }
}
</style>

<div class="el-benefits-title">{{ section.settings.title }}</div>
<div class="el-benefits-subtitle">{{ section.settings.subtitle }}</div>
<div class="el-benefits-section" id="el-benefits-section">
  {% assign left_benefits = section.blocks | slice: 0, 3 %}
  {% assign right_benefits = section.blocks | slice: 3, 3 %}
  <div class="el-benefits-col left">
    {% for block in left_benefits %}
      <div class="el-benefit-item" data-index="{{ forloop.index0 }}">
        <div class="el-benefit-icon">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | img_url: '60x' }}" alt="{{ block.settings.icon_alt | default: block.settings.title }}" loading="lazy" />
          {% else %}
            <span class="el-benefit-icon-placeholder" aria-hidden="true">★</span>
          {% endif %}
        </div>
        <div class="el-benefit-texts">
          <div class="el-benefit-title">{{ block.settings.title }}</div>
          <div class="el-benefit-desc">{{ block.settings.desc }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="el-benefits-col center">
    <div class="el-benefits-image">
      {% if section.settings.product_image != blank %}
        <img src="{{ section.settings.product_image | img_url: '400x' }}" alt="{{ section.settings.product_image_alt | default: 'Producto' }}" loading="lazy" />
      {% else %}
        <div class="el-benefits-image-placeholder" aria-hidden="true">IMG</div>
      {% endif %}
    </div>
  </div>
  <div class="el-benefits-col right">
    {% for block in right_benefits %}
      <div class="el-benefit-item" data-index="{{ forloop.index0 | plus: 3 }}">
        <div class="el-benefit-icon">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | img_url: '60x' }}" alt="{{ block.settings.icon_alt | default: block.settings.title }}" loading="lazy" />
          {% else %}
            <span class="el-benefit-icon-placeholder" aria-hidden="true">★</span>
          {% endif %}
        </div>
        <div class="el-benefit-texts">
          <div class="el-benefit-title">{{ block.settings.title }}</div>
          <div class="el-benefit-desc">{{ block.settings.desc }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<!-- Mobile slider (unchanged) -->
<div class="el-benefits-list" id="el-benefits-list" style="display:none">
  {% for block in section.blocks %}
    <div class="el-benefit-item" data-index="{{ forloop.index0 }}">
      <div class="el-benefit-icon">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | img_url: '60x' }}" alt="{{ block.settings.icon_alt | default: block.settings.title }}" loading="lazy" />
        {% else %}
          <span class="el-benefit-icon-placeholder" aria-hidden="true">★</span>
        {% endif %}
      </div>
      <div class="el-benefit-texts">
        <div class="el-benefit-title">{{ block.settings.title }}</div>
        <div class="el-benefit-desc">{{ block.settings.desc }}</div>
      </div>
    </div>
  {% endfor %}
</div>
<div class="el-benefits-slider-controls" id="el-benefits-slider-controls" style="display:none">
  {% for block in section.blocks %}
    <button class="el-benefits-slider-dot{% if forloop.first %} active{% endif %}" data-dot-index="{{ forloop.index0 }}" aria-label="Ir a beneficio {{ forloop.index }}"></button>
  {% endfor %}
</div>
{% if section.settings.button_text and section.settings.button_link %}
  <a href="{{ section.settings.button_link }}" class="el-benefits-btn">{{ section.settings.button_text }}</a>
{% endif %}

<script>
(function() {
  function isMobile() {
    return window.innerWidth <= 900;
  }
  var desktopSection = document.getElementById('el-benefits-section');
  var mobileList = document.getElementById('el-benefits-list');
  var mobileControls = document.getElementById('el-benefits-slider-controls');
  var items = mobileList ? mobileList.querySelectorAll('.el-benefit-item') : [];
  var dots = mobileControls ? mobileControls.querySelectorAll('.el-benefits-slider-dot') : [];
  var current = 0;
  function showSlide(idx) {
    if (!isMobile()) return;
    current = idx;
    items.forEach(function(item, i) {
      item.style.display = (i === idx) ? 'flex' : 'none';
    });
    dots.forEach(function(dot, i) {
      dot.classList.toggle('active', i === idx);
    });
  }
  function setupSlider() {
    if (!isMobile()) {
      if (desktopSection) desktopSection.style.display = '';
      if (mobileList) mobileList.style.display = 'none';
      if (mobileControls) mobileControls.style.display = 'none';
      return;
    }
    if (desktopSection) desktopSection.style.display = 'none';
    if (mobileList) mobileList.style.display = 'flex';
    if (mobileControls) mobileControls.style.display = 'flex';
    items.forEach(function(item, i) {
      item.style.display = (i === 0) ? 'flex' : 'none';
    });
  }
  if (items.length > 1) {
    setupSlider();
    window.addEventListener('resize', setupSlider);
    if (mobileControls) {
      dots.forEach(function(dot, i) {
        dot.addEventListener('click', function() {
          showSlide(i);
        });
      });
    }
    // Swipe support
    var startX = null;
    mobileList.addEventListener('touchstart', function(e) {
      startX = e.touches[0].clientX;
    });
    mobileList.addEventListener('touchend', function(e) {
      if (startX === null) return;
      var dx = e.changedTouches[0].clientX - startX;
      if (Math.abs(dx) > 40) {
        if (dx < 0 && current < items.length - 1) showSlide(current + 1);
        else if (dx > 0 && current > 0) showSlide(current - 1);
      }
      startX = null;
    });
  } else {
    setupSlider();
  }
})();
</script>

