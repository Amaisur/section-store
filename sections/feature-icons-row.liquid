<style>
#shopify-section-{{ section.id }} {
    padding: 2rem 40px;
    margin: 2rem auto;
    max-width: 1360px;
}
  .feature-icons-row-section {
    background: #f4f1ef;
    border-radius: 2.5rem;
    width: 100%;
    box-sizing: border-box;
    overflow-x: auto;
    padding: 2rem 40px;
  }
  .feature-icons-row-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  .feature-icons-row-block {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    min-width: 220px;
    flex: 1 1 0;
  }
  .feature-icons-row-icon { 
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: #bc9bb2;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .feature-icons-row-icon img { 
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  .feature-icons-row-text {
    font-weight: 700;
    font-size: 1.2rem;
    color: #181818;
    font-family: inherit;
    letter-spacing: 0.01em;
  }
  @media (max-width: 900px) {
    .feature-icons-row-list {
      gap: 1rem;
    }
    .feature-icons-row-block {
      min-width: 180px;
      gap: 1rem;
    }
    .feature-icons-row-icon {
      width: 56px;
      height: 56px;
    }
    .feature-icons-row-icon img {
      width: 32px;
      height: 32px;
    }
    .feature-icons-row-text {
      font-size: 1rem;
    }
  }
  @media (max-width: 600px) {
    #shopify-section-{{ section.id }} {
        padding: 1rem 16px;
    }
    .feature-icons-row-section {
      border-radius: 1.2rem;
      padding: 1rem 16px;
    }
    .feature-icons-row-list {
      flex-direction: column;
      align-items: stretch;
      gap: 1.2rem;
    }
    .feature-icons-row-block {
      min-width: 0;
      justify-content: flex-start;
    }
    .feature-icons-row-text {
      font-size: 1rem;
    }
  }
</style>
<div class="feature-icons-row-section">
  <div class="feature-icons-row-list"> 
    {% for block in section.blocks %}
      <div class="feature-icons-row-block">
        <span class="feature-icons-row-icon">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '100x' }}" alt="icon" loading="lazy" />
          {% endif %}
        </span>
        <span class="feature-icons-row-text">{{ block.settings.text }}</span>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Feature Icons Row",
  "settings": [
    {
      "type": "header",
      "content": "Add feature blocks with icon and text."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Icons Row",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %} 