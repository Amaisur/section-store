    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        .main-fd-67-d5{
            width: 100%;
            padding: 5rem 1rem;
            max-width: 1440px;
        }
        .inner-fd-67-d5{
            width: 100%;
        }
        .row-fd-67-d5 {
            display: grid;
            grid-template-columns: repeat(4, minmax(224px, 1fr)); 
            grid-auto-rows: auto; 
            gap: 10px;
        }
        .card-fd-67-d5{
            width: 100%;
            border: 1px solid;
            overflow: hidden;
            border-radius: 12px;
        }
        .card-image-fd-d5{
            aspect-ratio: 1/1;
            width: 100%;
            position: relative;
        }
        .card-image-fd-d5 img{
            width: 100%;
            height: 100%;
            aspect-ratio: 1/1;
            object-fit: cover;
            position: absolute;
            transition: all .4s cubic-bezier(0.215, 0.610, 0.355, 1);
        }
        .card-second-image-d5{
            opacity: 0;
        }
        .card-image-fd-d5:hover .card-second-image-d5{
            opacity: 1;
        }
        .card-content-fd-d5{
            background: #eeecec;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 12px;
        }
        .card-content-fd-d5 .title-fd-d5{
            margin: 0px;
            font-size: 14px;
            color: #000000;
            line-height: 130%;
            text-overflow: ellipsis;
            text-decoration: none;
            font-weight: 600;
            word-break: break-word;
            text-align: left;
        }
        .card-content-fd-d5 .sale-price-d5{
            margin: 0px;
            font-size: 14px;
            color: #000000;
            line-height: 130%;
            text-overflow: ellipsis;
            text-decoration: none;
            font-weight: 600;
            word-break: break-word;
            text-align: right;
        }
        .card-content-fd-d5 .compare-price-d5{
            text-decoration: line-through;
            font-size: 12px;
            font-weight: 400;
            text-align: right;
        }
    </style>
    
    {%  assign collection  = section.settings.collection %}
        <div class="main-fd-67-d5">
            <div class="inner-fd-67-d5">
                <div class="row-fd-67-d5">
                    {% for item in collection.products %}
                    <div class="card-fd-67-d5">
                    <a href="{{ item.url }}">
                    <div class="card-image-fd-d5">
                        <img class="card-main-image-d5" src="{{ item.featured_image | image_url: width: "500px" }}" width="auto" height="auto" alt="{{ item.title }}">
                        {% if item.images.size > 1 %}
                        <img class="card-second-image-d5" src="{{ item.images[1] | image_url: width: "500px" }}" width="auto" height="auto" alt="{{ item.title }}">
                        {% endif %}
                    </div>
                    <div class="card-content-fd-d5">
                        <p class="title-fd-d5">{{ item.title }}</p>
                        <p class="price-fd-d5">
                            <span class="sale-price-d5">{{ item.price | money }}</span>
                            {% if item.compare_at_price != blank %}
                            <span class="compare-price-d5">{{ item.compare_at_price | money }}</span>
                            {% endif %}
                        </p>
                    </div>
                    </a>
                    </div>
                {% endfor %}
                </div>
             </div>            
        </div>






{% schema %}
{
    "name": "Featured Collection",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        }
        ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}