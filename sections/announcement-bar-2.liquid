
{% render 'announcement-bar'%}

{% schema %}
  {
    "name": "Announcement 2",
    "settings": [
      {
        "type": "header",
        "content": "Section Layout"
      },
       {
        "type": "range",
        "id": "pt",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding Top",
        "step": 1,
        "default": 36
      },
      {
        "type": "range",
        "id": "pb",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding Bottom",
        "step": 1,
        "default": 36
      },
      {
        "type": "range",
        "id": "pt-d",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding Top (Desktop)",
        "step": 1,
        "default": 36
      },{
        "type": "range",
        "id": "pb-d",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding Bottom (Desktop)",
        "step": 1,
        "default": 36
      },
       {
        "type": "color_background",
        "id": "an-bg",
        "label": "Background Color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Text Styling"
      },
     
      {
        "type": "range",
        "id": "fs-t",
        "label": "Main Text Font Size",
        "min": 4,
        "max": 75,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "color",
        "id": "c-t",
        "label": "Main Text Color",
        "default": "#fff"
      },
      {
        "type": "range",
        "id": "fs-t-s",
        "label": "Small Text Font Size",
        "min": 4,
        "max": 75,
        "step": 1,
        "unit": "px",
        "default": 12
      },
      {
        "type": "color",
        "id": "c-t-s",
        "label": "Small Text Color",
        "default": "#fff"
      },
      {
        "type": "header",
        "content": "Font Family"
      },
       {
      "type": "select",
      "id": "font_choice",
      "label": "Choose Font",
      "default": "josefin",
      "options": [
        {
          "value": "josefin",
          "label": "Josefin Sans"
        },
        {
          "value": "montserrat",
          "label": "Montserrat"
        }
      ]
    }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Announcement",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "WORLD WIDE SHIPPING"
          },
          {
            "type": "text",
            "id": "min-text",
            "label": "Small Text"
          },
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          },
          {
            "type": "liquid",
            "id": "svg",
            "label": "Paste SVG Code"
          },
          {
            "type": "select",
            "id": "position",
            "label": "Main Text Position",
            "default": "column",
            "info": "Only applicable if 'small text' is present",
            "options": [
              {
                "value": "column",
                "label": "Top"
              },
              {
                "value": "column-reverse",
                "label": "Bottom"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Announcement 2"
      }
    ]
  }
{% endschema %}