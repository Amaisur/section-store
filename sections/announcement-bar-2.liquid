{% for block in section.blocks %}
{% assign block.settings = block.settings %}
{% endfor %}
{% render 'announcement-bar',
  text: block.settings.text,
  min_text: block.settings.min-text,
  img: block.settings.img,
  svg: block.settings.svg
%}

{% schema %}
  {
    "name": "Announcement 2",
    "settings": [],
    "blocks": [
      {
        "type": "text",
        "name": "Announcement",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "WORLD WIDE SHIPPING"
          },
          {
            "type": "text",
            "id": "min-text",
            "label": "Small Text"
          },
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          },
          {
            "type": "liquid",
            "id": "svg",
            "label": "Paste SVG Code"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Announcement 2"
      }
    ]
  }
{% endschema %}