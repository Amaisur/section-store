<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    h1,
    h2 {
        font-size: 17px;
    }

    h3 {
        font-size: 16px;
    }

    h4 {
        font-size: 15px;
    }

    h5 {
        font-size: 15px;
        font-weight: 600;
    }

    h6,
    p {
        font-size: 14px;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        color: #000;
    }

    p {
        color: #111;
    }

    a {
        text-decoration: none;
    }

    .cart-drawer-d5 {
        position: relative;
        width: 100%;
        overflow-x: hidden;
    }

    .cd-inner-d5 {
        width: 90%;
        max-width: 450px;
        background: #fff;
        box-shadow: 0 0 1px 2px #000;
        position: fixed;
        height: 100vh;
        top: 0;
        right: -500px;
        z-index: 999999;
        opacity: 0;
        visibility: hidden;
        transition: all .4s cubic-bezier(0.23, 1, 0.320, 1);
    }

    .cd-overlay-d5 {
        position: fixed;
        width: 100%;
        height: 100vh;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, .4);
        z-index: 999998;
        display: none;
    }

    .cd-drawer__open .cd-overlay-d5 {
        display: block !important;
    }

    .cd-drawer__open .cd-inner-d5 {
        opacity: 1;
        visibility: visible;
        right: 0;
    }

    .cd-header-d5 {
        width: 100%;
        padding: 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid #00000065;
    }

    .cd-close-d5 {
        width: 22px;
        height: 22px;
        cursor: pointer;
    }

    .cd-item-d5 {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
    }

    .cd-item-img-d5 {
        width: 100%;
        max-width: 150px;
        aspect-ratio: var(--aspect-ratio);
    }

    .cd-item-img-d5 img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        background: #eee;
    }

    .cd-content-d5 {
        display: flex;
        flex-direction: column;
        gap: 16px;
        overflow-y: auto;
        height: calc(100vh - 150px);
    }

    .cd-otpions-d5 {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .cd-title-price-d5 h4 {
        font-size: 16px;
    }

    .cd-quantity-d5 {
        width: 105px;
        height: 30px;
        display: flex;
        border: 1px solid #000000;
    }

    .cd-qty-input-d5:focus-visible {
        border: none;
    }

    .cd-qty-input-d5 {
        width: 45px;
        text-align: center;
        border: none;
        border-right: 1px solid #000000;
        border-left: 1px solid #000000;
        border-radius: 0;
        pointer-events: none;
    }

    .cd-qty-btn-d5 {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        cursor: pointer;
    }

    .is-loader-d5 {
        position: relative;
    }

    .is-loader-d5 .btn-loader-d5 {
        position: absolute;
        width: 12px;
        height: 12px;
        border: 3px solid #000;
        border-top: 3px solid transparent;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        transform: translate(-50%, -50%);
        display: none;
        opacity: 0;
    }

    .is-loader-d5.loading .btn-loader-d5 {
        display: block !important;
        opacity: 1;
    }

    .is-loader-d5.loading {
        pointer-events: none;
    }

    .is-loader-d5.loading .btn-text-d5 {
        opacity: 0;
    }

    .product-remove-loading {
        display: none !important;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .cd-title-price-d5 h4 {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        gap: 16px;
    }

    .cd-title-price-d5 h4 a {
        text-decoration: none;
        color: #000;
        display: block;
    }

    /* Skeleton Styles */
    .skeleton-active .real-item-d5 {
        display: none !important;
    }
    
    .skeleton-active .cd-item-skeleton {
        display: flex !important;
    }

    .cd-item-skeleton {
        display: none;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .skeleton {
        background-color: #e0e0e0;
        position: relative;
        overflow: hidden;
    }

    .skeleton::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(90deg, 
            rgba(255, 255, 255, 0) 0%, 
            rgba(255, 255, 255, 0.6) 50%, 
            rgba(255, 255, 255, 0) 100%);
        animation: shimmer 1.5s infinite;
    }

    .cd-item-skeleton .cd-item-img-d5 {
        background-color: #ddd;
        min-height: 150px;
    }

    .cd-item-skeleton .cd-item-info-d5 {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .cd-item-skeleton .cd-title-price-d5 h4 a {
        background-color: #ddd;
        height: 20px;
        width: 80%;
    }

    .cd-item-skeleton .cd-title-price-d5 p {
        background-color: #ddd;
        height: 16px;
        width: 60%;
    }

    .cd-item-skeleton .cd-otpions-d5 h5,
    .cd-item-skeleton .cd-otpions-d5 p {
        background-color: #ddd;
        height: 14px;
        width: 40px;
    }

    .cd-item-skeleton .cd-otpions-d5 p {
        width: 60px;
    }

    .cd-item-skeleton .cd-quantity-d5 {
        background-color: #ddd;
    }

    .cd-item-skeleton .cd-qty-btn-d5,
    .cd-item-skeleton .cd-qty-input-d5 {
        background-color: #ccc;
    }

    @keyframes shimmer {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(100%);
        }
    }
</style>

<div class="cart-drawer-d5 cd-drawer__open">
    <div class="cd-overlay-d5" close-cart-d5></div>
    <div class="cd-inner-d5">
        <div class="cd-header-d5">
            <div class="cd-heading-d5">
                <p>Your Cart <span class="cd-count-d5">{{ cart.item_count }}</span></p>
            </div>
            <div class="cd-close-d5" close-cart-d5>
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-close" fill="none" viewBox="0 0 18 17">
                <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" fill="currentColor">
                </path></svg>
            </div>
        </div>
        <div class="cd-content-d5 {% if cart.item_count == 0 %}skeleton-active{% endif %}">
            {% for item in cart.items %}
                <div class="cd-item-d5 real-item-d5" data-variant-id="{{ item.variant.id }}" data-line-item-key="{{ item.key }}">
                    <div class="cd-item-img-d5" style="--aspect-ratio: {{ item.image.aspect_ratio }}">
                        <a href="{{ item.url }}">
                        <img src="{{ item.image |  image_url: width: 400 }}" width="150" height="{{ item.image.height }}" alt="{{ item.title }}" loading="lazy">
                        </a>
                    </div>
                    <div class="cd-item-info-d5">
                        <div class="cd-title-price-d5">
                            <h4><a href="{{ item.product.url }}">{{ item.product.title }}</a>
                            <div class="cd-remove-d5 cd-qty-btn-d5">
                                {%  render 'd5-delete-icon' %}
                            </div>
                            </h4>
                            <p><span class="cd-regular-price">{{ item.original_price | money }}</span>
                            <span class="cd-compare-price">{{ item.product.final_price | money }}</span>
                            </p>
                        </div>
                         {%- if item.product.has_only_default_variant == false
                            or item.properties.size != 0
                            or item.selling_plan_allocation != null
                          -%}
                        <div class="cd-item-variants-d5">
                            {% if item.product.has_only_default_variant == false %}
                                {% for option in item.options_with_values %}
                                    <div class="cd-otpions-d5">
                                    <h5>{{ option.name }}:</h5>
                                    <p>{{ option.value }}</p>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                         {% endif %}
                        <div class="cd-quantity-d5">
                        {%  assign qty =  item.variant.inventory_management %}
                            <div class="cd-qty-btn-d5 is-loader-d5 {% if item.quantity == 1 %}cd-remove-d5{% else %}cd-minus-d5{% endif %}">
                                <span class="btn-text-d5">-</span>
                                <span class="btn-loader-d5"></span>
                            </div>
                            <input type="text" value="{{ item.quantity }}" data-max="{% if qty %}{%if item.variant.inventory_quantity > 1 %}{{ item.variant.inventory_quantity }}{% else %}0{% endif %}{% else %}999{% endif %}" readonly class="cd-qty-input-d5">
                            <div class="cd-qty-btn-d5 cd-plus-d5 is-loader-d5">
                                <span class="btn-text-d5">+</span>
                                <span class="btn-loader-d5"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="cd-item-d5 cd-item-skeleton">
                    <div class="cd-item-img-d5 skeleton"></div>
                    <div class="cd-item-info-d5">
                        <div class="cd-title-price-d5">
                            <h4><a class="skeleton"></a>
                            <div class="cd-remove-d5 cd-qty-btn-d5 skeleton"></div>
                            </h4>
                            <p class="skeleton"></p>
                        </div>
                        <div class="cd-item-variants-d5">
                            <div class="cd-otpions-d5">
                                <h5 class="skeleton"></h5>
                                <p class="skeleton"></p>
                            </div>
                        </div>
                        <div class="cd-quantity-d5 skeleton"></div>
                    </div>
                </div>
            {% else %}
                <div class="cd-empty-cart">
                    <p>Your cart is empty</p>
                </div>
            {% endfor %}
        </div>
        <div class="cd-footer-d5"></div>
    </div>
</div>



  
<script>
document.addEventListener('DOMContentLoaded', function () {
    document.querySelector('cart-drawer').remove();
})

</script> 

