<style>
    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
   h1, h2 {
    font-size: 17px;
    }
    h3 {
        font-size: 16px;
    }
    h4 {
        font-size: 15px;
    }
    h5 {
        font-size: 14px;
    }
    h6, p {
        font-size: 14px;
    }

    .cart-drawer-d5{
        position: relative;
        width: 100%;
    }
    .cd-inner-d5{
        width: 90%;
        max-width: 450px;
        background: #fff;
        box-shadow: 0 0 1px 2px #000;
    }
    .cd-header-d5{
        width: 100%;
        padding: 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid #00000065;
    }
    .cd-close-d5{
        width: 22px;
        height: 22px;
    }
</style>

<div class="cart-drawer-d5">
    <div class="cd-inner-d5">
        <div class="cd-header-d5">
            <div class="cd-heading-d5">
                <p>Your Cart <span class="cd-count-d5">{{ cart.item_count }}</span></p>
            </div>
            <div class="cd-close-d5">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-close" fill="none" viewBox="0 0 18 17">
                <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" fill="currentColor">
                </path></svg>
            </div>
        </div>
        <div class="cd-content-d5">
            {% for item in cart.items %}
                <div class="cd-item-d5">
                    <div class="cd-item-img-d5">
                        <img src="{{ item.image |  image_url: width: 400 }}" width="150" height="{{ item.image.height }}" alt="{{ item.title }}" loading="lazy">
                    </div>
                    <div class="cd-item-info-d5">
                        <div class="cd-title-price-d5">
                            <h4>{{ item.product.title }}</h4>
                            <p><span class="cd-regular-price">{{ item.original_price | money }}</span>
                            <span class="cd-compare-price">{{ item.product.final_price | money }}</span>
                            </p>
                        </div>
                         {%- if item.product.has_only_default_variant == false
                            or item.properties.size != 0
                            or item.selling_plan_allocation != null
                          -%}
                        <div class="cd-item-variants-d5">
                            {% if item.product.has_only_default_variant == false %}
                                {% for option in item.options_with_values %}
                                    <h5>{{ option.name }}:</h5>
                                    <p>{{ option.value }}</p>
                                {% endfor %}
                            {% endif %}
                        </div>
                         {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="cd-footer-d5"></div>
    </div>
</div>

{% schema %}
{
    "name": "D5 Cart Drawer",
    "settings": [
        
        ],
    "presets": [
        {
            "name": "D5 Cart Drawer"
        }
    ]
}
{% endschema %}