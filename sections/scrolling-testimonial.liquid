<style>
    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    .main-card-38-d9{
        max-width: 500px;
        width: min-content;
        border: 1px solid #dfdfdf;
        border-radius: 10px;
        box-shadow: rgba(115,114,114,0.15) 0px 2px 12px;
        background: #fff;
    }
    .row-card-38-d9{
        display: flex;
        gap: 20px;
        padding: 20px;
    }
    .verification-d9{
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .detail-col-38-d9{
        min-width: 320px;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }
    .img-col-38-d9 {
        overflow: hidden;
        border-radius: 10px;
        min-width: 70px;
        max-width: 70px;
    }
    .img-col-38-d9 img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .name-38-d9 h4{
        font-size: 14px;
        font-weight: 700;
        color: #BABABA;
    }
    .detail-col-38-d9 p{
        font-size: 12px;
        font-weight: 400;
        line-height: 15.6px;
        color: #B1B1B1;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
      border-radius: 0px;
      background: {{ section.settings.background }}; 
      max-width: fit-content;
      margin: auto;
      margin: 10px 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
    }
    #shopify-section-{{ section.id }}{
    padding: 0px 0px;
  }
  }
  #shopify-section-{{ section.id }} .custom-slider-container-wrapper{
      max-width: fit-content;
      overflow: hidden;
      padding-left: 0px;
      padding-right: 0px;
      background: transparent !important;
      

    }
    #shopify-section-{{ section.id }} .announcement-text{
      color: white;
    }
    #shopify-section-{{ section.id }} .custom-slider-wrapper{
      display: flex;
      justify-content: flex-start;
      overflow: hidden;
      min-width: max-content;
      margin: auto;
      background: transparent;
    }
    #shopify-section-{{ section.id }} .custom-slider-wrapper-inner{
      display: flex;
      gap: 38px;
      min-width: fit-content;
      width: fit-content;
      align-items: center;
      animation: logoslide {{ section.settings.smooth_speed }}s infinite cubic-bezier(0, 0, 0, 0);
    }

#shopify-section-{{ section.id }} .custom-slider-wrapper:hover .custom-slider-wrapper-inner {
  animation-play-state: paused;
}  



#shopify-section-{{ section.id }} .logo-container:hover {
      background: #d8e9de;
}

  
  
    #shopify-section-{{ section.id }} .announcement-link{
      display: flex;
      gap: 10px;
      min-width: fit-content;
      align-items: center;
      justify-content: flex-start;
      padding-right: 100px;
    }

    #shopify-section-{{ section.id }} .announcement-icon{
      padding-left: 100px;
      height: 16px;
    }

    #shopify-section-{{ section.id }} .slide-logo{
      height: auto;
      max-height: 100px;
   /*   min-height: 32px; */
      max-width: 140px;
      object-fit: contain;
    }
    @media (width > 768px) {
      #shopify-section-{{ section.id }} .slide-logo{
        max-height: 120px;
        max-width: 200px;
        max-width: 414px;
        height: 39px;
        width: auto;
      }
    }


  
    #shopify-section-{{ section.id }} .logo-container{
      padding-right: {{ section.settings.logos_gap }}px;
  /*    border:  2px solid red; */
      padding-left: {{ section.settings.logos_gap }}px;
      height: 100%;
      display: flex;
      align-items: center;
      background-color: transparent;
      margin-right:0px;
    }

      #shopify-section-{{ section.id }} .logo-container:hover {
      background-color: transparent;
    }

    @keyframes logoslide {
      {% if section.settings.direction  == 'rtol' %}
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-100%);
      }
        {% else %}
         0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(0%);
      }
        {% endif %}
    }



    #shopify-section-{{ section.id }} .logo-scroll__heading {
      color: {{ section.settings.head-color }};
      font-size: {{ section.settings.head-size }}px !important;
      font-style:;
      font-weight:  {% if section.settings.head-weight == 'normal' %}normal {% elsif section.settings.head-weight == 'light' %} light {% else %}bold{% endif %};
      line-height: normal;
      text-align: center;
      padding-bottom: 30px;
  }

  @media (width > 768px) {
    #shopify-section-{{ section.id }} .logo-scroll__heading {
      font-size: 32px;
    }
  }

  .announcement-bar__logo-scroll {
    padding-bottom: 0;
       {% if section.settings.box-shadow %}
      box-shadow: 4px 4px 20px rgba(191, 191, 191, 0.5);
      {% endif %}
  }
  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .logo-container{
      padding-right: {{ section.settings.logos_gap_mobile }}px;
      {% comment %} height: 16px; {% endcomment %}
    }

     
  }

@media screen and (min-width:2500px) {
      #shopify-section-{{ section.id }} .custom-slider-wrapper-inner{
      display: flex;
      gap: 38px;
      min-width: fit-content;
      width: fit-content;
      align-items: center;
      animation: logoslide 25s infinite cubic-bezier(0, 0, 0, 0);
    }
}
  
@media screen and (min-width:1800px) and (max-width:2499px) {
      #shopify-section-{{ section.id }} .custom-slider-wrapper-inner{
      display: flex;
      gap: 38px;
      min-width: fit-content;
      width: fit-content;
      align-items: center;
      animation: logoslide 31s infinite cubic-bezier(0, 0, 0, 0);
    }
}
  
@media screen and (max-width:480px) {
  #shopify-section-{{section.id}} {
    /* display:none; */
  }
  #shopify-section-{{ section.id }} .logo-container{
      padding: 0;
    }
  #shopify-section-{{ section.id }} .custom-slider-wrapper-inner{
    gap: 40px;
  }
  #announcement-smooth-{{ section.id }}{
    padding-right: 20px;
  }
}
   #shopify-section-{{ section.id }} a[href]:not([href=""]) {
  cursor: pointer;
}
   #shopify-section-{{ section.id }} a:hover{
    cursor: default;
  }
  
</style>
<section class="section page-width__logo-scroll section-{{ section.id }}-padding">
    <h2 class="logo-scroll__heading">{{ section.settings.heading }}</h2>
    <div class="custom-announcement-bar announcement-bar__logo-scroll">
        <div class="page-width custom-slider-container-wrapper">
            <div class="custom-slider-wrapper">
                {% for i in (1..4) %}
                <div class="custom-slider-wrapper-inner"
                    id="{% if forloop.first %}{%  else %}duplicate{{ i }}-{% endif %}announcement-smooth-{{ section.id }}">
                    {%- for block in section.blocks -%}
                    {% if block.type == 'logo' %}




                    <div class="main-card-38-d9">
                        <div class="inner-card-38-d9">
                            <div class="row-card-38-d9">
                                <div class="col-card-38-d9 img-col-38-d9">
                                    <img src="{{ block.settings.buy-img |  image_url: width: 1440  }}">
                                </div>
                                <div class="col-card-38-d9 detail-col-38-d9">
                                    <div class="star-rating-d9">
                                        <svg width="13" height="13" viewBox="0 0 13 13" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
