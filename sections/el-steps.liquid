{% comment %} el-steps: Steps/Features Section with Image and CTA {% endcomment %}

<style>
.el-steps-section {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  max-width: 1360px;
  margin: 0 auto 2.5rem auto;
  padding: 2.5rem 1rem 1.5rem 1rem;
  background: #fff;
  border-radius: 2rem;
  box-shadow: 0 2px 16px rgba(44, 34, 54, 0.07);
  gap: 2.5rem;
}
.el-steps-left {
  flex: 1 1 420px;
  min-width: 320px;
  max-width: 650px;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}
.el-steps-headline {
  font-size: 2.5rem;
  font-weight: 800;
  color: #181818;
  margin-bottom: 0.2rem;
  line-height: 1.1;
}
.el-steps-headline .accent {
  color: #bc9bb2;
}
.el-steps-subtitle {
  font-size: 1.1rem;
  color: #333;
  margin-bottom: 1.2rem;
}
.el-steps-features {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem 2.5rem;
  margin-bottom: 1.2rem;
}
.el-steps-feature {
  flex: 1 1 260px;
  min-width: 220px;
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}
.el-steps-feature-icon {
  min-width: 54px;
  min-height: 54px;
  background: #f4f1ef;
  border: 2px dashed #bc9bb2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  color: #bc9bb2;
  margin-top: 0.2rem;
}
.el-steps-feature-content {
  flex: 1;
}
.el-steps-feature-title {
  font-weight: 700;
  font-size: 1.1rem;
  margin-bottom: 0.2rem;
  color: #181818;
}
.el-steps-feature-desc {
  font-size: 0.98rem;
  color: #444;
}
.el-steps-cta {
  margin: 1.5rem 0 0.5rem 0;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.el-steps-cta-btn {
  background: #bc9bb2;
  color: #fff;
  font-weight: 700;
  font-size: 1.1rem;
  border: none;
  border-radius: 1.5rem;
  padding: 0.9rem 2.5rem;
  cursor: pointer;
  margin-bottom: 0.7rem;
  transition: background 0.2s;
}
.el-steps-cta-btn:hover {
  background: #a07e9c;
}
.el-steps-info-row {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  font-size: 1rem;
  color: #444;
}
.el-steps-info-row .el-steps-info-icon {
  margin-right: 0.4rem;
  color: #bc9bb2;
  font-size: 1.2rem;
}
.el-steps-right {
  flex: 1 1 340px;
  min-width: 260px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.el-steps-image-circle {
  width: 370px;
  height: 370px;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid #bc9bb2;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f4f1ef;
}
.el-steps-image-circle img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
@media (max-width: 900px) {
  .el-steps-section {
    flex-direction: column;
    padding: 1.2rem 0.5rem 1.2rem 0.5rem;
    gap: 1.5rem;
  }
  .el-steps-left, .el-steps-right {
    max-width: 100%;
    min-width: 0;
  }
  .el-steps-image-circle {
    width: 220px;
    height: 220px;
  }
  .el-steps-headline {
    font-size: 2rem;
  }
}
</style>

<div class="el-steps-section">
  <div class="el-steps-left">
    <div class="el-steps-headline">
      {{ section.settings.headline | escape }}<span class="accent">{{ section.settings.headline_accent | escape }}</span>
    </div>
    <div class="el-steps-subtitle">{{ section.settings.subtitle | escape }}</div>
    <div class="el-steps-features">
      {% for block in section.blocks %}
        <div class="el-steps-feature">
          <div class="el-steps-feature-icon">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '64x' }}" alt="icon" style="width:32px;height:32px;object-fit:contain;" loading="lazy">
            {% else %}
              <span>üåü</span>
            {% endif %}
          </div>
          <div class="el-steps-feature-content">
            <div class="el-steps-feature-title">{{ block.settings.title | escape }}</div>
            <div class="el-steps-feature-desc">{{ block.settings.desc | escape }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="el-steps-cta">
      <a href="{{ section.settings.cta_link }}" class="el-steps-cta-btn">{{ section.settings.cta_label | escape }}</a>
      <div class="el-steps-info-row">
        <span class="el-steps-info-icon">üöö</span> {{ section.settings.info_1 | escape }}
        <span class="el-steps-info-icon">üõ°Ô∏è</span> {{ section.settings.info_2 | escape }}
      </div>
    </div>
  </div>
  <div class="el-steps-right">
    <div class="el-steps-image-circle">
      {% if section.settings.main_image != blank %}
        <img src="{{ section.settings.main_image | img_url: '600x' }}" alt="{{ section.settings.main_image_alt | escape }}" loading="lazy">
      {% else %}
        <div style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;color:#bc9bb2;font-size:2.5rem;">üñºÔ∏è</div>
      {% endif %}
    </div>
  </div>
</div>

