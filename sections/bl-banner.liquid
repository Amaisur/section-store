{% comment %}
  BrightlinkAV-style banner with video background, text, and button on the left.
  - All classes use bl- prefix
  - Fully responsive, no theme dependencies
  - Video background with image fallback
  - Text and button on left, content vertically centered
{% endcomment %}

<style>
  .bl-banner {
    position: relative;
    width: 100%;
    aspect-ratio: 3/1;
    display: flex;
    align-items: stretch;
    overflow: hidden;
    background: #0a2c28;
  }
  .bl-banner__media {
    /* position: absolute; */
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  .bl-banner video{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .bl-banner__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(270deg, rgba(0, 0, 0, 0.00) 40.03%, rgba(0, 0, 0, 0.63) 61.02%, rgba(0, 0, 0, 0.70) 100%);
    z-index: 2;
    display: block !important;
  }
  .bl-banner__content {
    position: absolute;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    max-width: 600px;
    top: 50%;
    transform: translateY(-50%);
    padding: 48px 16px;
  }
  @media (min-width: 750px) {
    .bl-banner__content {
      padding: 64px 40px;
    }
  }
  .bl-banner__subtitle {
    color: #fff;
    font-size: 1.1em;
    font-weight: 500;
    margin-bottom: 16px;
  }
  .bl-banner__title {
    color: #fff;
    font-size: 2.5em;
    font-weight: 800;
    margin-bottom: 32px;
    line-height: 1.1;
  }
  @media (min-width: 750px) {
    .bl-banner__title {
      font-size: 3em;
    }
  }
  .bl-banner__button {
    background: #5ca6f7;
    color: #fff;
    font-size: 1.1em;
    font-weight: 700;
    padding: 16px 40px;
    border: none;
    border-radius: 2px;
    text-decoration: none;
    transition: background 0.2s;
    cursor: pointer;
    display: inline-block;
  }
  .bl-banner__button:hover,
  .bl-banner__button:focus {
    background: #3578e5;
  }
</style>

<section class="bl-banner">
  {% if section.settings.video != blank %}
    {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: trueW }}
  {% elsif section.settings.image != blank %}
    <img class="bl-banner__media" src="{{ section.settings.image | image_url }}" alt="Banner background">
  {% endif %}
  <div class="bl-banner__overlay"></div>
  <div class="bl-banner__content">
    {% if section.settings.subtitle != blank %}
      <div class="bl-banner__subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}
    {% if section.settings.title != blank %}
      <div class="bl-banner__title">{{ section.settings.title }}</div>
    {% endif %}
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="bl-banner__button">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "bl-banner",
  "class": "bl-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Brightlink Large Scale Video Walls"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Transforming Spaces With Stunning LED Video Walls"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image Fallback"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    }
  ],
  "presets": [
    {
      "name": "bl-banner",
      "category": "Banner"
    }
  ]
}
{% endschema %} 