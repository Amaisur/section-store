.section-{{ section.id }} {
    border-top: solid #000000 0px;
    border-bottom: solid #000000 0px;
    margin-top: 0px;
    margin-bottom: 0px;
}

.section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ section.settings.pt-m }}px;
    padding-bottom: {{ section.settings.pb-m }}px;
    padding-left: {{ section.settings.pv-m }}rem;
    padding-right: {{ section.settings.pv-m }}rem;
}

.hotspots-body-{{ section.id }} {
    margin-top: 30px;
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 30px;
    align-items: center;
}

.hotspots-image-{{ section.id }} {
    border-radius: 12px;
    border: 1px solid #000000;
    position: relative;
    order: 1;
}

.hotspots-image-{{ section.id }} > img,
.hotspots-image-{{ section.id }} > svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
}

.hotspots-image-{{ section.id }} > svg {
    background-color: #DDDDDD;
}

.hotspots-image-{{ section.id }}:after {
    position: absolute;
    content: '';
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    z-index: 1;
}

.hotspots-hotspot-{{ section.id }} {
    position: absolute;
    z-index: 2;
}

.hotspots-circle-{{ section.id }} {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 1px solid #000000;
    background-color: #ffffff;
    cursor: pointer;
    transition: all 0.25s ease 0s;
}

.hotspots-circle-{{ section.id }}:hover {
    border: 1px solid #000000;
    background-color: #ffcf9f;
    transition: all 0.25s ease 0s;
}

.hotspots-circle-{{ section.id }}.active {
    border: 1px solid #000000;
    background-color: #ffcf9f;
    transition: all 0.25s ease 0s;
}

.hotspots-circle-{{ section.id }} span {
    margin: 0;
    line-height: 100%;
    text-transform: unset;
    transition: all 0.25s ease 0s;
}

.hotspots-circle-{{ section.id }}:hover span {
    transition: all 0.25s ease 0s;
}

.hotspots-circle-{{ section.id }}.active span {
    transition: all 0.25s ease 0s;
}

.hotspots-content-{{ section.id }} {
    order: {{ section.settings.img-direct }};
}

.hotspots-content-inner-{{ section.id }} {
    width: 100%;
    margin: 0px auto;
}

.hotspots-desktop-{{ section.id }} {
    display: none;
}

.hotspots-heading-{{ section.id }} {
    text-align: center;
}

.hotspots-heading-{{ section.id }} * {
    margin: 0;
    text-transform: unset;
}

.hotspots-item-{{ section.id }} {
    display: none;
}

.hotspots-item-{{ section.id }}.active {
    display: block;
}

.hotspots-text-{{ section.id }} {
    margin-top: 12px;
    text-align: center;
}

.hotspots-text-{{ section.id }} * {
    margin: 0;
    line-height: 150%;
    text-transform: unset;
}

.hotspots-circles-{{ section.id }} {
    margin-top: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
}

@media(min-width: 1024px) {

    .section-{{ section.id }} {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    .section-{{ section.id }}-settings {
        padding-top: {{ section.settings.pt }}px;
        padding-bottom: {{ section.settings.pb }}px;
        padding-left: {{ section.settings.pv }}rem;
        padding-right: {{ section.settings.pv }}rem;
    }

    .hotspots-body-{{ section.id }} {
        margin-top: 0px;
        grid-template-columns: repeat(2, 1fr);
        gap: 40px;
    }

    .hotspots-image-{{ section.id }} {
        order: 1;
    }

    .hotspots-circle-{{ section.id }} {
        width: 36px;
        height: 36px;
    }

    .hotspots-content-inner-{{ section.id }} {
        max-width: 550px;
    }

    .hotspots-content-{{ section.id }} {
        order: 2;
    }

    .hotspots-desktop-{{ section.id }} {
        display: block;
    }

    .hotspots-mobile-{{ section.id }} {
        display: none;
    }

    .hotspots-heading-{{ section.id }} {
        text-align: center;
    }

    .hotspots-text-{{ section.id }} {
        margin-top: 14px;
        text-align: center;
    }

    .hotspots-circles-{{ section.id }} {
        margin-top: 40px;
        justify-content: center;
    }
}

