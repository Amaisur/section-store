{% for block in section.blocks %}
  <style>
    .hotspots-hotspot-hotspot_{{ block.id }} {
      left: {{ block.settings.left }}%;
      top: {{ block.settings.top }}%;
      transform: translate(-{{ block.settings.left }}%, -{{ block.settings.top }}%);
    }
    .hotspots-item-{{ block.id }} .heading-d5 *{
      font-size: {{ block.settings.fhs-m }}px;
      line-height: 130%;
      color: {{ block.settings.fhc }};
    }
    .hotspots-item-{{ block.id }} .info-d5 *{
      font-size: {{ block.settings.fis-m }}px;
      line-height: 130%;
      color: {{ block.settings.fic }};
    }
    @media(min-width: 1024px) {
      .hotspots-hotspot-hotspot_{{ block.id }} {
        left: {{ block.settings.left }}%;
        top: {{ block.settings.top-d }}%;
        transform: translate(-{{ block.settings.left }}%, -{{ block.settings.top-d }}%);
      }
    .hotspots-item-{{ block.id }} .heading-d5 *{
      font-size: {{ block.settings.fhs }}px;
    }
    .hotspots-item-{{ block.id }} .info-d5 *{
      font-size: {{ block.settings.fis }}px;
    }
    }
  </style>
{% endfor %}


<div class="section-{{ section.id }} hotspots-{{ section.id }}" style="background-color:#ffffff; background-image: ;">
    <div class="section-{{ section.id }}-settings">
      
      <div class="hotspots-body-{{ section.id }}">
        {% if section.settings.img != blank %}
        <div class="hotspots-image-{{ section.id }}">
          
            <img src="{{ section.settings.img | img_url: 'master' }}" alt="SUNSET THROW - NAMING THIS LATER - NTL" lazy="loading">
          
          
          {% for block in section.blocks %}
            <div class="hotspots-circle-{{ section.id }} hotspots-hotspot-{{ section.id }} hotspots-hotspot-hotspot_{{ block.id }} {% if forloop.first %}active{% endif %}" data-id="hotspot_{{ block.id }}">
              <span>{{ forloop.index }}</span>
            </div>
          {% endfor %}
        </div>
        {% endif %}
        <div class="hotspots-content-{{ section.id }}">
          <div class="hotspots-content-inner-{{ section.id }}">
            
            <div class="hotspots-items-{{ section.id }}">
              
              {% for block in section.blocks %}
                <div class="hotspots-item-{{ block.id }} hotspots-item-{{ section.id }} {% if forloop.first %}active{% endif %}" id="hotspot_{{ block.id }}">
                  
                    <div class="heading-d5 hotspots-heading-{{ section.id }}"><p><strong>{{ block.settings.heading }}</strong></p></div>
                  
                  <div class="info-d5 hotspots-text-{{ section.id }}">
                    {{ block.settings.info }}
                  </div>
                </div>
              {% endfor %}
              
            </div>
            
            <div class="hotspots-circles-{{ section.id }}">
              {% for block in section.blocks %}
                <div class="hotspots-circle-{{ section.id }} {% if forloop.first %}active{% endif %}" data-id="hotspot_{{ block.id }}">
                  <span>{{ forloop.index }}</span>
                </div>
              {% endfor %}
              
            </div>
          </div>
        </div>
        
      </div>
    </div>
</div>

<script>
  function initHotspots4() {
    if(document.querySelectorAll('.hotspots-circle-{{ section.id }}')) {
      let circles = document.querySelectorAll('.hotspots-circle-{{ section.id }}');
      let texts = document.querySelectorAll('.hotspots-item-{{ section.id }}');
      
      circles.forEach(el => {
        el.addEventListener('click', () => {
          let dataId = el.getAttribute('data-id');

          circles.forEach(element => {
            let dataElementId = element.getAttribute('data-id');
            
            if(dataId != dataElementId) {
              element.classList.remove('active');
            } else {
              element.classList.add('active');
            }
          })

          if(texts) {
            texts.forEach(element => {
              
              if(element.id != dataId ) {
                element.classList.remove('active');
              } else {
                element.classList.add('active');
              }
              
            })
          }
        })
      })
    }
  }

  document.addEventListener('DOMContentLoaded', initHotspots4);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initHotspots4);
     document.addEventListener('shopify:section:load', initHotspots4);
  }
</script>












