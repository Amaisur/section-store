<<script>
    document.addEventListener('DOMContentLoaded', function() {
  var popupopenD5 = document.querySelector('.quick-add-d5');
  // Handle showing and hiding the quick add-to-cart popup
  const addToCartBtns = document.querySelectorAll('.quick-add-popup-btn-d5');
  
  addToCartBtns.forEach(function(addToCartBtn) {
    const quickAddContainer = addToCartBtn.nextElementSibling;
    const overlay = quickAddContainer.querySelector('.quick-add-overlay-d5');
    const closeIcon = quickAddContainer.querySelector('.close-icon-d5');
    
    addToCartBtn.addEventListener('click', function() {
      quickAddContainer.classList.add('popup-q-open');
      document.body.classList.add('no-scroll_popup-body-d5');
      setupQuantitySelectors();
      setupAddToCart();
      setupTabFunctionality();  // Initialize tab functionality when popup is opened
    });

    overlay.addEventListener('click', function() {
      quickAddContainer.classList.remove('popup-q-open');
      document.body.classList.remove('no-scroll_popup-body-d5')
    });

    closeIcon.addEventListener('click', function() {
      quickAddContainer.classList.remove('popup-q-open');
      document.body.classList.remove('no-scroll_popup-body-d5')
    });
  });

  // Initialize quantity selectors
  function setupQuantitySelectors() {
    const activePopup = document.querySelector('.popup-q-open');

    if (activePopup) {
      const quantityInput = activePopup.querySelector('.quantity-input-d5');
      const minusButton = activePopup.querySelector('.quantity-minus-d5');
      const plusButton = activePopup.querySelector('.quantity-plus-d5');

      minusButton.removeEventListener('click', handleMinusClick);
      plusButton.removeEventListener('click', handlePlusClick);

      minusButton.addEventListener('click', handleMinusClick);
      plusButton.addEventListener('click', handlePlusClick);

      function handleMinusClick(event) {
        event.preventDefault();
        let currentValue = parseInt(quantityInput.value);
        if (currentValue > 1) {
          quantityInput.value = currentValue - 1;
        }
      }

      function handlePlusClick(event) {
        event.preventDefault();
        let currentValue = parseInt(quantityInput.value);
        quantityInput.value = currentValue + 1;
      }
    }
  }

  // Setup the Add to Cart functionality
  function setupAddToCart() {
    const activePopup = document.querySelector('.popup-q-open');

    if (activePopup) {
      const atcButton = activePopup.querySelector('#AddToCart');
      let selectedVariantId = null;
      let selectedPlanId = null;

      // Automatically select the first variant by default
      const firstVariantBtn = activePopup.querySelector('.variant-btn-d5');
      if (firstVariantBtn) {
        firstVariantBtn.classList.add('variant-active');
        selectedVariantId = firstVariantBtn.getAttribute('data-variant-id');
      }

      activePopup.querySelectorAll('.variant-btn-d5').forEach(function(button) {
        button.addEventListener('click', function() {
          activePopup.querySelectorAll('.variant-btn-d5').forEach(function(btn) {
            btn.classList.remove('variant-active');
          });
          this.classList.add('variant-active');
          selectedVariantId = this.getAttribute('data-variant-id');
        });
      });

      activePopup.querySelectorAll('.plan-btn-d5').forEach(function(button) {
        button.addEventListener('click', function() {
          activePopup.querySelectorAll('.plan-btn-d5').forEach(function(btn) {
            btn.classList.remove('plan-active');
          });
          this.classList.add('plan-active');
          selectedPlanId = this.getAttribute('data-plan-id');
        });
      });

      atcButton.addEventListener('click', function(event) {
        event.preventDefault();

        if (selectedVariantId) {
          const quantityInput = activePopup.querySelector('.quantity-input-d5');
          const quantity = parseInt(quantityInput.value, 10);
          const data = {
            id: selectedVariantId,
            quantity: quantity
          };

          if (selectedPlanId) {
            data.selling_plan = selectedPlanId;
          }

          atcButton.disabled = true;
          activePopup.querySelector('.atc-content-d5').style.display = 'none';
          activePopup.querySelector('.atc-spinner-d5').style.display = 'inline-block';

          fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify(data)
          })
          .then(response => response.json())
          .then(data => {
            fetch('/cart?view=drawer')
              .then(response => response.text())
              .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const updatedCartItems = doc.querySelector('.c-side-cart__items').innerHTML;
                document.querySelector('.c-side-cart__items').innerHTML = updatedCartItems;

                atcButton.disabled = false;
                activePopup.querySelector('.atc-content-d5').style.display = 'inline-block';
                activePopup.querySelector('.atc-spinner-d5').style.display = 'none';

                document.body.classList.add('js-side-cart-open');
                document.body.classList.remove('no-scroll_popup-body-d5');
                popupopenD5.classList.remove('popup-q-open');
              })
              .catch(error => {
                console.error('Error updating cart drawer:', error);
                atcButton.disabled = false;
                activePopup.querySelector('.atc-content-d5').style.display = 'inline-block';
                activePopup.querySelector('.atc-spinner-d5').style.display = 'none';
              });
          })
          .catch(error => {
            console.error('Error adding to cart:', error);
            atcButton.disabled = false;
            activePopup.querySelector('.atc-content-d5').style.display = 'inline-block';
            activePopup.querySelector('.atc-spinner-d5').style.display = 'none';
          });
        } else {
          alert('Please select a variant or plan.');
        }
      });
    }
  }

function initializeSlider() {
  document.querySelectorAll('.q-slider-container-d5').forEach(function(container) {
    const slider = container.querySelector('.q-slider-d5');
    const slides = container.querySelectorAll('.q-slide-d5');
    const prevBtn = container.querySelector('.q-prev-d5');
    const nextBtn = container.querySelector('.q-next-d5');
    const dotsContainer = container.querySelector('.q-dots-d5');

    let currentIndex = 0;
    const totalSlides = slides.length;

    function updateButtons() {
      if (totalSlides <= 1) {
        prevBtn.style.display = 'none';
        nextBtn.style.display = 'none';
      } else {
        if (currentIndex === 0) {
          prevBtn.style.display = 'none';
          nextBtn.style.display = 'block';
        } else if (currentIndex === totalSlides - 1) {
          prevBtn.style.display = 'block';
          nextBtn.style.display = 'none';
        } else {
          prevBtn.style.display = 'block';
          nextBtn.style.display = 'block';
        }
      }
    }

    function updateDots() {
      dotsContainer.innerHTML = '';
      if (totalSlides > 1) {
        for (let i = 0; i < totalSlides; i++) {
          const dot = document.createElement('span');
          dot.classList.add('q-dot-d5');
          if (i === currentIndex) {
            dot.classList.add('active');
          }
          dot.addEventListener('click', () => {
            goToSlide(i);
          });
          dotsContainer.appendChild(dot);
        }
      }
    }

    function goToSlide(index) {
      currentIndex = index;
      const offset = -currentIndex * 100;
      slider.style.transform = `translateX(${offset}%)`;
      updateButtons();
      updateDots();
    }

    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        goToSlide(currentIndex - 1);
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < totalSlides - 1) {
        goToSlide(currentIndex + 1);
      }
    });

    updateButtons();
    updateDots();
  });
}

initializeSlider();


  // Initialize tab functionality
  function setupTabFunctionality() {
    const activePopup = document.querySelector('.popup-q-open');
    if (activePopup) {
      const variantTabBtn = activePopup.querySelector('.variant-tab-btn');
      const planTabBtn = activePopup.querySelector('.plan-tab-btn');
      const variantsTab = activePopup.querySelector('.variants-tab-d5');
      const planTab = activePopup.querySelector('.plan-tab-d5');
      
      let selectedPlanId = null;

      variantTabBtn.classList.add('active');
      planTab.style.display = 'none';

      variantTabBtn.addEventListener('click', function() {
        variantsTab.style.display = 'block';
        planTab.style.display = 'none';
        variantTabBtn.classList.add('active');
        planTabBtn.classList.remove('active');
        selectedPlanId = null;
      });

      planTabBtn.addEventListener('click', function() {
        planTab.style.display = 'block';
        variantsTab.style.display = 'none';
        planTabBtn.classList.add('active');
        variantTabBtn.classList.remove('active');
      });
    }
  }
});

