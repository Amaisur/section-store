{% comment %}
  BrightlinkAV-style category slider section with 3 cards visible and scrollable rest
  - Responsive: max-width 1360px, padding-inline 40px (desktop), 16px (mobile)
  - Desktop: 3 cards visible, rest scrollable
  - Mobile: horizontal scroll slider
  - Half image visible at bottom right, lifts on hover
  - Whole box clickable
{% endcomment %}

<style>
#shopify-section-{{ section.id }} {
  max-width: 1360px;
  padding-inline: 40px;
  margin: 0 auto;
}

.bl-category-section {
  margin: 48px 0;
}

.bl-category-section__title {
  font-size: 2.5em;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48px;
  color: #222;
}

.bl-category-grid {
  display: flex;
  overflow-x: auto;
  gap: 32px;
  padding-bottom: 16px;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}

.bl-category-card {
  position: relative;
  background: #fff;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  padding: 32px;
  aspect-ratio: 2/1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.3s ease;
  overflow: hidden;
  text-decoration: none;
  color: inherit;
  flex: 0 0 calc((100% - 64px) / 3);
  scroll-snap-align: start;
}

.bl-category-card__content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.bl-category-card__badge {
  display: inline-block;
  color: #222;
  font-size: 1.5em;
  font-weight: 800;
  margin-bottom: 8px;
  text-align: left;
}

.bl-category-card__title {
  font-size: 1.5em;
  font-weight: 300;
  color: #222;
  line-height: 1.2;
  margin: 0;
  text-align: left;
}

.bl-category-card__image {
  position: absolute;
  bottom: -20px;
  right: -20px;
  width: 150px;
  height: 150px;
  object-fit: contain;
  border-radius: 8px;
  transition: all 0.3s ease;
  z-index: 1;
}

.bl-category-card:hover .bl-category-card__image {
  transform: translateY(-8px) scale(1.05);
}

/* Mobile Styles */
@media (max-width: 900px) {
  #shopify-section-{{ section.id }} {
    padding-inline: 16px;
  }
  
  .bl-category-section__title {
    font-size: 2em;
    margin-bottom: 32px;
  }
  
  .bl-category-grid {
    gap: 16px;
  }
  
  .bl-category-card {
    flex: 0 0 30%;
    padding: 24px;
  }
  
  .bl-category-card__title {
    font-size: 1.3em;
  }
  
  .bl-category-card__image {
    width: 100px;
    height: 100px;
    bottom: -15px;
    right: -15px;
  }
}

@media (max-width: 600px) {
  .bl-category-section__title {
    font-size: 1.8em;
    margin-bottom: 24px;
  }
  
  .bl-category-card {
    flex: 0 0 260px;
    /* height: 220px; */
    padding: 20px;
  }
  
  .bl-category-card__title {
    font-size: 1.2em;
  }
  
  .bl-category-card__image {
    width: 80px;
    height: 80px;
    bottom: -10px;
    right: -10px;
  }
}

/* Hide scrollbar but keep functionality */
.bl-category-grid::-webkit-scrollbar {
  display: none;
}

.bl-category-grid {
  -ms-overflow-style: none;
  scrollbar-width: none;
}
</style>

<div class="bl-category-section">
  {% if section.settings.title != blank %}
    <h2 class="bl-category-section__title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="bl-category-grid">
    {% for block in section.blocks %}
      {% if block.settings.link_url != blank %}
        <a href="{{ block.settings.link_url }}" class="bl-category-card">
      {% else %}
        <div class="bl-category-card">
      {% endif %}
        
        <div class="bl-category-card__content">
          {% if block.settings.badge != blank %}
            <span class="bl-category-card__badge">{{ block.settings.badge }}</span>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3 class="bl-category-card__title">{{ block.settings.title }}</h3>
          {% endif %}
        </div>
        
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | image_url: width: 240 }}"
            alt="{{ block.settings.title | escape }}"
            class="bl-category-card__image"
            loading="lazy"
            width="120"
            height="120"
          >
        {% endif %}
        
      {% if block.settings.link_url != blank %}
        </a>
      {% else %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
